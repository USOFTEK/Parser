source 'https://rubygems.org'

# Specify your gem's dependencies in my_crawler.gemspec
gemspec

# => Requires specified gems

# Capybara Gem
gem 'capybara'

# Capybara-webkit
gem 'capybara-webkit'

# Eventmachine
gem 'eventmachine'

# Use Bson extencions
gem 'bson_ext'

# Mongoid
gem 'mongoid'

# Use Module Mongoid::Locker
gem 'mongoid-locker', git: 'git://github.com/afeld/mongoid-locker.git'

# Use Module Mongoid::Ancestry
gem 'mongoid-ancestry'

# Use Faye
gem 'faye'

# Use Thin
gem 'thin'

# Use HTTP
gem 'http'
